{
  "name": "basic-vue-chat",
  "version": "0.1.1",
  "main": "./dist/basic-vue-chat.common.js",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "build-bundle": "vue-cli-service build --target lib --name basic-vue-chat ./src/components/basic-vue-chat/entry.js",
    "lint": "vue-cli-service lint",
    "fix": "vue-cli-service lint --fix",
    "test": "vue-cli-service test:unit",
    "test:unit": "vue-cli-service test:unit",
    "test:e2e": "vue-cli-service test:e2e"
  },
  "dependencies": {
    "vue": "^2.5.17",
    "vue-moment": "^4.0.0",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.0-rc.12",
    "@vue/cli-plugin-e2e-cypress": "^3.0.0-rc.12",
    "@vue/cli-plugin-eslint": "^3.0.0-rc.12",
    "@vue/cli-plugin-unit-jest": "^3.0.5",
    "@vue/cli-service": "^3.0.0-rc.12",
    "@vue/eslint-config-standard": "^3.0.5",
    "@vue/test-utils": "^1.0.0-beta.20",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^23.0.1",
    "chai": "^4.1.2",
    "lint-staged": "^7.2.2",
    "node-sass": "^4.9.0",
    "sass-loader": "^7.0.1",
    "vue-template-compiler": "^2.5.17"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint --fix",
      "git add -u"
    ],
    "*.vue": [
      "vue-cli-service lint --fix",
      "git add -u"
    ]
  },
  "files": [
    "dist/*",
    "src/*",
    "public/*",
    "*.vue",
    "*.json",
    "*.js"
  ]
}
